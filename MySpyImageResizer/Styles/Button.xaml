    <Style x:Key="Button3StateStyle" TargetType="Button">
        <Setter Property="BorderBrush" Value="#FF404040" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="0">
                <Setter Property="Foreground" Value="#FF404040" />
                <Setter Property="BorderBrush" Value="#FF404040" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="1">
                <Setter Property="Foreground" Value="#FFABADB3" />
                <Setter Property="BorderBrush" Value="#FFABADB3" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="2">
                <Setter Property="Foreground" Value="#6B69D6" />
                <Setter Property="BorderBrush" Value="#6B69D6" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

